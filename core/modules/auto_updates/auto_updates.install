<?php

/**
 * @file
 * Contains install and update functions for Automatic Updates.
 */

use Drupal\auto_updates\ReadinessChecker\ReadinessRequirement;

/**
 * Implements hook_requirements().
 */
function auto_updates_requirements($phase) {
  if ($phase !== 'runtime') {
    return [];
  }

  $readinessRequirement = new ReadinessRequirement(\Drupal::service('auto_updates.readiness_checker_manager'));
  return ['auto_updates_readiness' => $readinessRequirement->getRequirement()];
}
